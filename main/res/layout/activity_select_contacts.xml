<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.projoh.android.manymessage.SelectContactsActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentcontactslistview"
        android:fastScrollEnabled="true"
        android:focusable="true"
        android:layout_marginTop="45dp"
        android:dividerHeight="-1dp" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fabSome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_add_black_18dp"
        fab:fab_colorNormal="@color/White"
        fab:fab_colorPressed="@color/Purple"
        fab:fab_colorRipple="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:onClick="sendSelected"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fabAddAll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_archive_black_18dp"
        fab:fab_colorNormal="@color/White"
        fab:fab_colorPressed="@color/Purple"
        fab:fab_colorRipple="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="111dp"
        android:onClick="AddEntireList"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/search"
        android:layout_alignBottom="@+id/inputSearch" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputSearch"
        android:layout_alignParentTop="true"
        android:hint="Search.."
        android:layout_toRightOf="@id/imageView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
