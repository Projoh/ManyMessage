<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:paddingTop="65dp"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Name, Last Name"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView7"
        android:textSize="20dp"
        android:paddingTop="5dp"
        android:paddingLeft="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="fname, lname"
        android:textSize="20dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/customtext2"
        android:textColor="@android:color/darker_gray" />=
    android:focusable="false"
    android:focusableInTouchMode="false"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone number"
        android:id="@+id/textView5"
        android:layout_marginBottom="65dp"
        android:layout_below="@+id/textView3"
        android:textSize="20dp"
        android:paddingTop="25dp"
        android:paddingLeft="16dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:text="pnumber"
        android:textSize="20dp"
        android:paddingRight="16dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignEnd="@+id/editText2"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Custom One(cone1)"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:paddingTop="5dp"
        android:paddingLeft="16dp"
        android:layout_below="@+id/scrollView"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customtext1"
        android:text="cone1"
        android:selectAllOnFocus="true"
        android:textSize="20dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Custom Two(cone2)"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:paddingTop="5dp"
        android:paddingLeft="16dp"
        android:layout_below="@id/textView6"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customtext2"
        android:text="cone2"
        android:selectAllOnFocus="true"
        android:textSize="20dp"
        android:paddingRight="16dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Message:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/scrollView"
            android:layout_below="@id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/messageEditText"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Hello fname, this is a message to the lname family. cone1 is a new event. Is it okay to contact you at pnumber for future events?"
                android:selectAllOnFocus="true"
                />
        </ScrollView>
    </RelativeLayout>
</ScrollView>